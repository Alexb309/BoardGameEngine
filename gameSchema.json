{
  "id": "foo",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "description": "A json schema to describe a board game",
  "type": "object",
  
  "properties":
  {
    "metadata":
    {
			"name":
			{
				"type": "string"
			},
      "author":
      {
				"type": "string"
      },
      "originalCreationDate":
      {
				"type": "string",
				"format": "date-time"
      },
      "lastModifiedDate":
      {
				"type": "string",
				"format": "date-time"
      }
    },
		"players":
		{
			"properties":
			{
				"name": {"type": "string"}
			}
		},
    "pieces":
    {
      "type":"object",
      "minProperties": 1,
      "properties":
      {
        "name": {"type": "string"},
				"image": {"type":  "string"},
				"player": {"type":  "string"}
      }
    },
    "board":
    {
      "properties":
      {
				"shape": {"type":  "string"},
        "width": {"type": "integer"},
        "height": {"type": "integer"},
				"pieceConfiguration": {"type":  "array"},
				"background": {"type":  "string"},
				"activePlayer": {"type": "string"},
				"selectionsRequired": {"type": "boolean"}
			}
    },
		"rules":
		{
			"properties":
			{
				"name": {"type": "string"},
				"pieces": {"type":  "array"},
				"conditions": {"type":  "array"},
				"actions": {"type":  "array"}
			}
		},
		"conditions":
		{
			"properties":
			{
				"name": {"type": "string"},
				"type": {"type":  "string"}
			}
		},
		"actions":
		{
			"properties":
			{
				"name": {"type": "string"},
				"type": {"type":  "string"}
			}
		}
	}
}
