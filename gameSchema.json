{
  "id": "foo",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "description": "A json schema to describe a board game",
  "type": "object",
  
  "properties":
  {
    "metadata":
    {
      "creationType":
      {
				"enum": ["built-in", "expansion", "custom"]
      },
      "author":
      {
				"type": "string"
      },
      "originalCreationDate":
      {
				"type": "string",
				"format": "date-time"
      },
      "lastModifiedDate":
      {
				"type": "string",
				"format": "date-time"
      },
      "currentUserGenerated":
      {
				"type": "boolean"
      }
    },
    "basicInfo":
    {
      "players":
			{
				"properties":
				{
					"name": "string"
				}
			},
			"firstMove": {"type": "string"},
      "gameName":
      {
				"type": "string"
      },
      "gameNameAlias":
      {
				"type": "string"
      },
      "gameID":
      {
				"type": "integer"
      }
    },
    "pieces":
    {
      "type":"object",
      "minProperties": 1,
      "properties":
      {
        "name": {"type": "string"},
				"image": {"type":  "string"}
      }
    },
    "board":
    {
      "properties":
      {
				"shape": {"type":  "string"},
        "width": {"type": "integer"},
        "height": {"type": "integer"},
				"pieceConfiguration": {"type":  "array"},
				"playerConfiguration": {"type":  "array"},
				"background": {"type":  "string"}
			}
    },
		"rules":
		{
			"properties":
			{
				"name": {"type": "string"},
				"pieces": {"type":  "array"},
				"conditions": {"type":  "array"},
				"actions": {"type":  "array"},
				"consequences": {"type":  "array"}
			}
		},
		"conditions":
		{
			"properties":
			{
				"name": {"type": "string"},
				"type": {"type":  "string"},
				"parameters": {"type":  "array"}
			}
		},
		"actions":
		{
			"properties":
			{
				"name": {"type": "string"},
				"type": {"type":  "string"},
				"parameters": {"type":  "array"}
			}
		},
		"consequences":
		{
			"properties":
			{
				"name": {"type": "string"},
				"type": {"type":  "string"},
				"parameters": {"type":  "array"}
			}
		}
	}
}
